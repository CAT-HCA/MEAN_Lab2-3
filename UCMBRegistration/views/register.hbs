<!doctype html>
<html lang="en">

<head>
    {{> head}}


</head>

<body class="w-100 bg-light">
    {{> nav}}

    <!-- MAIN CONTENT -->
    <div class="col-xs-12 col-md-5 mx-auto container-fluid">
        <div id="editSectionDiv" class="mx-auto">
            <form id="editSectionForm">
                <fieldset class="border border-primary rounded p-2 my-3">
                    <legend class="text-center w-25">{{title}}</legend>
                    <div class="row form-group">
                        <div class="col-12 form-check">
                            <label for="registerEmail">Email:</label>
                            <input class="form-control" id="registerEmail" name="email" type="text">
                        </div>
                        <div class="col-12 form-check">
                            <label for="registerUsername">Username:</label>
                            <input class="form-control" id="registerUsername" name="username" type="text">
                        </div>
                        <div class="col-12 form-check">
                            <label for="registerPassword">Password:</label>
                            <input class="form-control" id="registerPassword" name="password" type="password">
                        </div>
                        <div class="col-12 form-check">
                            <label for="regConfPassword">Confirm Password:</label>
                            <input class="form-control" id="regConfPassword" name="confpassword" type="password">
                        </div>
                    </div>
                </fieldset>
                <div class="form-group text-center">
                    <input class="btn btn-primary my-3" type="button" id="regBtn" value="Register">
                    <input class="btn btn-danger my-3" type="button" id="regResetBtn" value="Reset">
                </div>
            </form>
            <div class="container mx-auto">
                <div id="errorMessageDiv" class="mx-auto">
                    <ul id="errorMessages" class="bg-success border border-success rounded">
                    </ul>
                </div>
                <div id="alreadyRegDiv" class="bg-success border border-success rounded">
                    <p class="m-2">An account has already been created with this username and/or email. Click here to go
                        to the login page.</p>
                    <div class="text-center">
                        <input class="btn btn-primary my-1" type="button" id="goToLoginBtn" value="Login">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END OF MAIN CONTENT -->
    {{> footer}}
    {{> scripts}}
    <script src="/js/register.js"></script>

</body>

</html>